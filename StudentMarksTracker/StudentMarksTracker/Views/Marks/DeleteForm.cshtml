@model StudentMarksTracker.Models.Marks;

<nav>
    <a asp-controller="Home" asp-action="Index">Home</a>
    <a asp-controller="Student" asp-action="Index">Students</a>
</nav>

<h1>Are you sure you want to delete this?</h1>

<div style="border: 1px solid red; padding: 15px; margin-bottom: 20px;">
    <div>
        <label><strong>Subject:</strong></label> @Model.Subject
    </div>
    <div>
        <label><strong>Mark:</strong></label> @Model.Mark %
    </div>
</div>

<form asp-action="DeleteForm" method="post">
    <input type="hidden" name="markId" value="@Model.Id" />

    <button type="submit" class="btn btn-danger">Yes, Delete Mark</button>
</form>

<br />

<a asp-controller="Student" asp-action="Details" asp-route-id="@Model.StudentId">
    <button class="btn btn-secondary">Cancel</button>
</a>